{
    "name": "Simplicity Playground (add-annex)",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "SIMPLICITYHL_REPO": "https://github.com/BlockstreamResearch/SimplicityHL.git",
            "HAL_SIMPLICITY_REPO": "https://github.com/stringhandler/hal-simplicity.git",
            "HAL_SIMPLICITY_BRANCH": "feat/add-annex",
            "LWK_REPO": "https://github.com/Blockstream/lwk.git"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "rust-lang.rust-analyzer",
                "Blockstream.simplicityhl"
            ]
        }
    },
    "postCreateCommand": "chmod +x /usr/local/bin/simc || true"
}